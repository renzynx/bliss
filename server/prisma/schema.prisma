// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  username        String   @unique
  password        String
  token           String   @unique
  is_admin        Boolean  @default(false)
  use_embed       Boolean? @default(false)
  embed_site_name String?  @default("Bliss")
  embed_title     String?
  embed_color     String   @default("#808bed")
  embed_desc      String?
  files           File[]
  urls            Url[]
}

model Url {
  id          Int      @id @default(autoincrement())
  destination String
  short       String
  created_at  DateTime @default(now())
  password    String?
  views       Int      @default(0)
  user        User     @relation(fields: [uid], references: [id])
  uid         Int
}

model File {
  id            Int      @id @default(autoincrement())
  file_name     String
  original_name String
  mimetype      String   @default("image/png")
  slug          String
  uploaded_at   DateTime @default(now())
  views         Int      @default(0)
  size          Int
  user          User     @relation(fields: [uid], references: [id])
  uid           Int
}

model Invite {
  id         Int      @id @default(autoincrement())
  code       String   @unique
  created_at DateTime @default(now())
  used_by    String
  uid        Int
}
