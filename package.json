	"packageManager": "yarn@3.2.0",
	"devDependencies": {
		"@sapphire/ts-config": "^3.3.2",
		"@swc/core": "^1.2.157",
		"@types/express": "^4.17.13",
		"@types/multer": "^1.4.7",
		"@types/node": "^17.0.21",
		"prisma": "latest",
		"tsup": "^5.12.1",
		"typescript": "^4.6.2"
	},
	"dependencies": {
		"@prisma/client": "latest",
		"colorette": "^2.0.16",
		"dotenv-cra": "^3.0.2",
		"express": "^4.17.3",
		"multer": "^1.4.4",
		"reflect-metadata": "^0.1.13"
	},
	"scripts": {
		"build": "tsup",
		"watch": "tsup -w",
		"start": "node ./build/index.js NODE_ENV=production",
		"dev": "NODE_ENV=development tsup --watch --onSuccess \"node ./build/index.js\"",
		"format": "prettier --write \"src/**/*.ts\"",
		"setup": "node ./build/libs/create.js",
		"regen": "node ./build/libs/regenerate.js",
		"migrate": "prisma migrate dev --name init",
		"find": "node ./build/libs/find.js"
	}
}
